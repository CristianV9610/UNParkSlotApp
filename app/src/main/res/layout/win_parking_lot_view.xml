<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/round_back_parkingbackground_100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_whitegray_100"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoCar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="60dp"
            android:clickable="true"
            android:contentDescription="ImageSignIn"
            android:src="@drawable/ic_car" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textEmptySpaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="@string/textEmptySpaces"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textEmmptySpaceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/textEmptySpaces"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/parkinglot_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 1" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/Slot1"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 3" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot4"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/Slot3"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot5"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 5" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Slot6"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@+id/Slot5"
                    android:background="@drawable/round_back_transparent_100"
                    android:text="Slot 6" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>